<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.allstarproject.cs2340.allstarwatercrowdsourcingapp.controller.LoginActivity"
    android:layout_width="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtWaterLocation"
        android:hint="Enter Location:"
        android:singleLine="false"
        android:background="@drawable/my_border"
        android:textColorLink="?android:attr/colorForeground"
        android:textSize="24sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/txtWaterHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtWaterHeader"
        android:layout_alignEnd="@+id/txtWaterHeader" />


    <TextView
        android:text="Create A Water Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWaterHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtWaterCondition"
        android:hint="Enter Water Condition:"
        android:singleLine="false"
        android:background="@drawable/my_border"
        android:textColorLink="?android:attr/colorForeground"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/txtWaterType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtWaterType"
        android:layout_alignEnd="@+id/txtWaterType" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtWaterType"
        android:hint="Enter Water Type:"
        android:singleLine="false"
        android:background="@drawable/my_border"
        android:textColorLink="?android:attr/colorForeground"
        android:textSize="24sp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/txtWaterLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtWaterLocation"
        android:layout_alignEnd="@+id/txtWaterLocation" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelSubmitReport"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        style="@android:style/Widget.Button.Small"
        android:layout_marginBottom="39dp"
        android:background="@android:drawable/checkbox_off_background"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnSubmitWaterReport"
        android:layout_toStartOf="@+id/btnSubmitWaterReport"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmitWaterReport"
        style="@android:style/Widget.Button.Small"
        android:background="@android:drawable/checkbox_off_background"
        android:soundEffectsEnabled="?attr/windowActionBar"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_alignBaseline="@+id/btnCancelSubmitReport"
        android:layout_alignBottom="@+id/btnCancelSubmitReport"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
